.new
  .new__logo
    = link_to 'Connect',resume_index_path,class:'new__logo--logo_name'
    .new__logo__item
      = link_to "新規登録", new_registration_path(resource_name),class:"new__logo__item--left"
      = link_to "ログイン", new_session_path(resource_name),class:"new__logo__item--right"
  .new__registration2
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .new__registration2--email
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"new__registration2--email--size"
      .new__registration2--submit
        = f.submit "新しいパスワードへ更新する",class:"new__registration2--submit--btn"