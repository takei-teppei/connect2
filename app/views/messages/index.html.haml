  = f.text_area :text,class:"form_space__text",placeholder: 'メッセージを入力'
  -# = f.label :image, class: 'form_space__btn' do
  -#   %i.fa.fa-image
  -#   = f.file_field :image,type:"hidden", class: 'form_space__btn--image'
  = f.submit "送信",class:"form_space__submit"