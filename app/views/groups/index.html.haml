.header
  = render "/resume/header"

.user_space
  = render "/users/side_bar"
  
  .user_mypage
    .user_mypage__title
      グループ一覧
    .user_mypage__middle
      = link_to "完了",done_users_path,class:"user_mypage__middle--white"
      = link_to "編集中",unedited_users_path,class:"user_mypage__middle--gray"
    .user_mypage__bottom
      - @groups.each do |group|
        .user_mypage__bottom__resume
          .user_mypage__bottom__resume__left
            = link_to group_path(group),class:"user_mypage__bottom__resume__left--name" do
              = group.name
              %br
              作成日:
              = group.created_at.strftime("%Y年%m月%d日")
          -# = link_to "削除" ,resume_path(resume),method: :delete,class:"user_mypage__bottom__resume__left--delete"